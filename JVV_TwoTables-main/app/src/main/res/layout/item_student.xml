<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:padding="8dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="John Doe"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/editImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/crossImageView"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        android:alpha="0.5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/edit_button_description"/>


    <ImageView
        android:id="@+id/crossImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:alpha="0.5"
        android:contentDescription="@string/cross_image_content_description" />

    <TextView
        android:id="@+id/registrationNumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/registration_no"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/registrationNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100145"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"
        app:layout_constraintLeft_toRightOf="@id/registrationNumTitle"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/diseaseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registrationNumTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Disease"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/diseaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registrationNumTitle"
        app:layout_constraintLeft_toRightOf="@id/diseaseTitle"
        tools:text="Blood pressure"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/villageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diseaseTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/village"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/villageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Veerlapalem"
        app:layout_constraintTop_toBottomOf="@id/diseaseTitle"
        app:layout_constraintLeft_toRightOf="@id/villageTitle"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/contactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/villageTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/contact"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="903423342323"
        app:layout_constraintTop_toBottomOf="@id/villageTitle"
        app:layout_constraintLeft_toRightOf="@id/contactTitle"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>



    <TextView
        android:id="@+id/tabletsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contactTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/tablets"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tabletsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Citrezen"
        app:layout_constraintTop_toBottomOf="@id/contactTitle"
        app:layout_constraintLeft_toRightOf="@id/tabletsTitle"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>




    <TextView
        android:id="@+id/genderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tabletsTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/gender"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Male"
        app:layout_constraintTop_toBottomOf="@id/tabletsTitle"
        app:layout_constraintLeft_toRightOf="@id/genderTitle"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>